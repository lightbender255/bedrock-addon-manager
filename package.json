{
  "name": "bedrock-addon-manager",
  "version": "0.1.0",
  "description": "A GUI to manage addons for a Minecraft Bedrock Dedicated Server.",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "test": "playwright test"
  },
  "build": {
    "appId": "com.lightbender.bedrockaddonmanager",
    "productName": "Bedrock Addon Manager",
    "files": [
      "src/**/*",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "portable"
    }
  },
  "keywords": [
    "Minecraft",
    "Bedrock",
    "Addon",
    "Manager"
  ],
  "author": "lightbender255",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.44.1",
    "electron": "^31.0.1",
    "electron-builder": "^24.13.3",
    "electron-playwright-helpers": "^1.0.0",
    "playwright": "^1.44.1"
  },
  "dependencies": {
    "electron-log": "^5.1.5"
  }
}
